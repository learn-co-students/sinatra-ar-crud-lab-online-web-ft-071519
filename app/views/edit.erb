<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<form action="/articles/<%= @article.id %>" method='post'>
    <input id="hidden" type="hidden" name="_method" value="patch">

    Article Title: <input type="text" id="title" name="title">
    Article Content: <textarea type="text" id="content" name="content">

    <input id="submit" type="submit">
</form>